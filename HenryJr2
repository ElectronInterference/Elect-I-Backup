                DriveLeft(30);
                TurnRight(90);
                DriveForward(15);
                TurnRight(30);
                DriveForward(40);
                ReleaseMarker();
                DriveBackwards(100);
            }
            }
            //DriveForward
            //...
            TaterTot=3;
        }
