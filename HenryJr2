    @Override
    public void loop() {
        // the Robot does the first task which is to unlatch 
       if (TaterTot==1){
           Land();
       }
       else if (TaterTot==2){
           NavigateToCheeseBlock();
       }
       else if (TaterTot==3){
           FindAndKnockOffCheeseBlock();
        }
        else if (TaterTot==4){
            NavigateToDepot();
        }
        else if (TaterTot==5){
            DeployMarker();
        }
        else if (TaterTot==6){
            NavigateToCrater();
        }
        
        
    }
        public void Land(){
            //LiftDown
            TaterTot=2;
        }
        
